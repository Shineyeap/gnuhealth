<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data skiptest="1">

<!-- Sequences for Inpatient Registration -->

        <record id="seq_type_medical_inpatient_registration" model="ir.sequence.type">
            <field name="name">Inpatient Registration</field>
            <field name="code">medical.inpatient.registration</field>
        </record>

        <record id="seq_medical_inpatient_registration" model="ir.sequence">
            <field name="name">Inpatient Registration</field>
            <field name="code">medical.inpatient.registration</field>
            <field name="prefix">INPAC</field>
            <field name="padding">3</field>
        </record>

        <record model="ir.property" id="property_inpatient_registration_sequence">
            <field name="name">inpatient_registration_sequence</field>
            <field name="field" 
                search="[('model.model', '=', 'medical.sequences'), ('name', '=', 'inpatient_registration_sequence')]"/>
            <field name="value" eval="'ir.sequence,' + str(ref('seq_medical_inpatient_registration'))"/>
        </record>

    </data>
</tryton>
